---
import { Image } from "astro:assets";
import { getCollection } from "astro:content";
import BaseHead from "../../components/BaseHead.astro";
import Footer from "../../components/Footer.astro";
import FormattedDate from "../../components/FormattedDate.astro";
import Header from "../../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../../consts";
import CategorySidebar from "../../components/CategorySidebar.astro";

const posts = (await getCollection("blog")).sort((a, b) => {
  // 먼저 날짜로 정렬 (최신순)
  const dateDiff = b.data.pubDate.valueOf() - a.data.pubDate.valueOf();
  if (dateDiff !== 0) return dateDiff;
  // 같은 날짜면 파일명 역순으로 정렬 (최신 파일이 위로)
  return b.id.localeCompare(a.id);
});
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body
    class="bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 antialiased flex flex-col min-h-screen transition-colors"
  >
    <Header />
    <main
      class="w-full max-w-6xl mx-auto px-4 py-12 flex-grow flex flex-col md:flex-row gap-8"
    >
      <CategorySidebar />
      <section class="flex-1">
        <ul class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {
            posts.map((post) => (
              <li class="group">
                <a href={`/blog/${post.id}/`} class="block no-underline">
                  <div class="mb-4 overflow-hidden rounded-xl shadow-sm group-hover:shadow-md transition-shadow">
                    {post.data.heroImage && (
                      <Image
                        width={720}
                        height={720}
                        src={post.data.heroImage}
                        alt=""
                        class="w-full aspect-square object-cover transform group-hover:scale-105 transition-transform duration-300"
                      />
                    )}
                  </div>
                  <h4 class="text-2xl font-bold text-gray-900 dark:text-gray-100 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors mb-2">
                    {post.data.title}
                  </h4>
                  <p class="text-sm text-gray-500 dark:text-gray-400">
                    <FormattedDate date={post.data.pubDate} />
                  </p>
                </a>
              </li>
            ))
          }
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>
