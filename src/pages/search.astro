---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`Search - ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
  </head>
  <body
    class="bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 transition-colors"
  >
    <Header />
    <main class="w-full max-w-4xl mx-auto px-4 py-8 min-h-[60vh]">
      <h1 class="text-3xl font-bold mb-8 text-center">Search Posts</h1>

      <div class="max-w-xl mx-auto mb-10">
        <input
          type="text"
          id="search-input"
          placeholder="Type to search..."
          class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all"
          autofocus
        />
      </div>

      <div id="search-results" class="grid gap-6">
        <!-- Results will be injected here -->
        <p class="text-center text-gray-500 dark:text-gray-400">
          Type something to start searching...
        </p>
      </div>
    </main>
    <Footer />

    <script>
      let posts = [];

      // Fetch posts on load
      fetch("/search.json")
        .then((response) => response.json())
        .then((data) => {
          posts = data;
        })
        .catch((err) => console.error("Failed to load search index", err));

      const searchInput = document.getElementById("search-input");
      const searchResults = document.getElementById("search-results");

      searchInput.addEventListener("input", (e) => {
        const query = e.target.value.toLowerCase();

        if (query.length < 2) {
          searchResults.innerHTML =
            '<p class="text-center text-gray-500 dark:text-gray-400">Type something to start searching...</p>';
          return;
        }

        const filteredPosts = posts.filter((post) => {
          return (
            post.title.toLowerCase().includes(query) ||
            post.description.toLowerCase().includes(query)
          );
        });

        if (filteredPosts.length === 0) {
          searchResults.innerHTML =
            '<p class="text-center text-gray-500 dark:text-gray-400">No results found.</p>';
          return;
        }

        searchResults.innerHTML = filteredPosts
          .map(
            (post) => `
					<a href="/blog/${post.slug}/" class="block p-6 rounded-xl border border-gray-200 dark:border-gray-700 hover:border-blue-500 dark:hover:border-blue-500 transition-colors group">
						<h3 class="text-xl font-bold mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">${post.title}</h3>
						<p class="text-gray-600 dark:text-gray-300 text-sm mb-2">${new Date(post.pubDate).toLocaleDateString()}</p>
						<p class="text-gray-700 dark:text-gray-300">${post.description}</p>
					</a>
				`
          )
          .join("");
      });
    </script>
  </body>
</html>
